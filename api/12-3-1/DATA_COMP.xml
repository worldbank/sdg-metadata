      &lt;/td&gt;
      &lt;td&gt;
        &lt;p&gt;0&lt;/p&gt;
      &lt;/td&gt;
      &lt;td&gt;
        &lt;p&gt;3.5&lt;/p&gt;
      &lt;/td&gt;
    &lt;/tr&gt;
    &lt;tr&gt;
      &lt;td&gt;
        &lt;p&gt;Amount Lost&lt;/p&gt;
      &lt;/td&gt;
      &lt;td&gt;
        &lt;p&gt;73&lt;/p&gt;
      &lt;/td&gt;
      &lt;td&gt;
        &lt;p&gt;13.905&lt;/p&gt;
